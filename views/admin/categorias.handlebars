<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add"<button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">
        <h4>
            {{nome}}
        </h4>
        <small>Slug:
            {{slug}}
        </small><br>
        <small>
            Data:{{date}}
        </small>
        <a href="/admin/categorias/edit/{{_id}}"<button class="btn btn-success ml-4">
            Editar Categoria
        </button></a>

            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}"></input>
                <button type="submit" class="btn btn-danger" onclick="return confirm('Deseja excluir este registro')">Deletar Categoria</button>
            </form>
    </div>
</div>
{{else}}
    <h4 class="mt-4">Nenhuma categoria encontrada</h4>
{{/each}}