<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add"<button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">
        <h4>
            {{nome}}
        </h4>
        <small>Slug:
            {{slug}}
        </small><br>
        <small>
            Data:{{date}}
        </small>
        <a href="/admin/categorias/edit/{{_id}}"<button class="btn btn-success ml-4">
            Editar Categoria
        </button></a>
    </div>
</div>
{{else}}

{{/each}}