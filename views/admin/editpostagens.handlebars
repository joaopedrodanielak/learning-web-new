{{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <form action="/admin/postagem/edit" method="POST">
        <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="titulo">Titulo</label>          
            <input type="text" name="titulo" id="" class="form-control" value="{{postagem.titulo}}">
            <label for="slug">Slug</label>
            <input type="text" name="slug" id="" class="form-control" value="{{postagem.slug}}">
            <label for="descricao" class="mt-1">Descricao</label>
            <input type="text" name="descricao" id="" class="form-control" value="{{postagem.descricao}}">
            <label for="conteudo">Conteudo:</label>
            <textarea name="conteudo" id="" cols="30" rows="10" class="form-control">{{postagem.conteudo}}</textarea>
            <label for="categoria">Categoria :</label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="">Nenhuma Categoria registrada</option>
                {{/each}}
            </select> 
            <button type="submit" class="btn btn-success mt-4">Editar Postagem</button>
        </form>
    </div>
</div>